<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        
        <!-- Task 1: LinearLayout with FrameLayout -->
        <activity
            android:name=".Task1LinearLayoutActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Task 2: RelativeLayout -->
        <activity
            android:name=".Task2RelativeLayoutActivity"
            android:exported="true" />
        
        <!-- Task 3: Dynamic manipulation -->
        <activity
            android:name=".Task3DynamicActivity"
            android:exported="true" />
        
        <!-- Task 4: ConstraintLayout -->
        <activity
            android:name=".Task4ConstraintLayoutActivity"
            android:exported="true" />
        
        <!-- Task 5: ConstraintSet -->
        <activity
            android:name=".Task5ConstraintSetActivity"
            android:exported="true" />
            
        <!-- Main Menu -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>
